= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!
  .row
    %fieldset
      %legend
        = t('form_title.edit_account')
        = current_usuario.name
      .large-12.columns
        .small-3.columns
          = f.label :avatar
        .large-9.columns
          = f.file_field :avatar, :autofocus => true, :class => "form-controll"
      .large-12.columns
        .large-3.columns
          = f.label t('form_text.name')
        .large-9.columns
          = f.text_field :name
      .large-12.columns
        .large-3.columns
          = f.label t('form_text.apellido')
        .large-9.columns
          = f.text_field :apellido
      .large-12.columns
        .large-2.columns
          = f.label t('form_text.description')
        .large-10.columns
          = f.text_area :description, :class => "ckeditor"
      &nbsp;
      %fieldset#fieldset_format
        .large-12.columns
          %br
          .large-3.columns
            = f.label :email
          .large-9.columns
            = f.email_field :email, autofocus: true
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        .large-12.columns
          .large-3.columns
            %br
            = f.label :password
          .large-9.columns
            %i
              (#{t('form_text.password_leave_blank')})
            = f.password_field :password, autocomplete: "off"
        .large-12.columns
          .large-3.columns
            = f.label t('form_text.password_confirmation')
          .large-9.columns
            = f.password_field :password_confirmation, autocomplete: "off"
        .large-12.columns
          .large-3.columns
            %br
            = f.label t('form_text.password_now')
          .large-9.columns
            %i
              (#{t('form_text.current_password')})
            = f.password_field :current_password, autocomplete: "off"
      .actions.large-9.small-6.columns.right
        = f.submit t("form_button.update_button"), :id => "myButton"
.row
  %fieldset
    %h3= t('form_title.cancel_account')
    %p
      = t('form_text.mensaje_cancel')
    = button_to t("form_title.cancel_account"),
      registration_path(resource_name),
      data: { confirm: t('form_text.question_confirmation') },
      method: :delete, :id => "myButton"
    = link_to t('form_text.back'), :back
